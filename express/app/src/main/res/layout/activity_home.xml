<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomeActivity"
    android:background="@drawable/gen">


    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <Button
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_arrow_back"
                android:padding="17dp"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hr"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_below="@id/back"
                android:background="@color/colorPrimaryDark"></TextView>


            <EditText
                android:id="@+id/dealername"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/hr"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/inputs"
                android:hint="Dealer Name...."
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@android:color/black" />

            <EditText
                android:id="@+id/dealerphone"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/dealername"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/inputs"
                android:hint="Dealer Contact no."
                android:inputType="number"
                android:padding="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@android:color/black" />


            <ImageView
                android:id="@+id/select_product_image"
                android:layout_width="217dp"
                android:layout_height="175dp"
                android:layout_below="@+id/dealerphone"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:paddingTop="10dp"
                android:src="@drawable/select_product_image" />

            <EditText
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/select_product_image"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/inputs"
                android:hint="Product Name...."
                android:textColor="@color/colorPrimaryDark"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:paddingTop="10dp"
                android:textColorHint="@android:color/black" />

            <EditText
                android:id="@+id/product_description"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/product_name"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/inputs"
                android:textColor="@color/colorPrimaryDark"
                android:hint="Product Description...."
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:textColorHint="@android:color/black" />

            <EditText
                android:id="@+id/product_price"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/product_description"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/inputs"
                android:hint="Product Price...."
                android:inputType="numberDecimal"
                android:padding="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@android:color/black" />


            <EditText
                android:id="@+id/product_quantity"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/product_price"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/inputs"
                android:textColor="@color/colorPrimaryDark"
                android:hint="Product Quantity...."
                android:inputType="numberDecimal"
                android:padding="20dp" />

            <Button
                android:id="@+id/new_add_product"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/product_quantity"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttons"
                android:padding="17dp"
                android:text="Add Item"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="27sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
